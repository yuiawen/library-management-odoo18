<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_borrowing_list" model="ir.ui.view">
        <field name="name">library.borrowing.list</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <list string="Borrowings" 
                  decoration-danger="days_overdue &gt; 0 and state == 'borrowed'"
                  decoration-warning="state == 'borrowed'"
                  decoration-success="state == 'returned'"
                  decoration-muted="state == 'lost'">
                <field name="name"/>
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="borrow_date"/>
                <field name="due_date"/>
                <field name="return_date" optional="show"/>
                <field name="days_overdue" optional="show"/>
                <field name="fine_amount" optional="show" widget="monetary"/>
                <field name="state" 
                       decoration-info="state=='draft'" 
                       decoration-success="state=='returned'" 
                       decoration-warning="state=='borrowed'"
                       decoration-danger="state=='lost'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_borrowing_form" model="ir.ui.view">
        <field name="name">library.borrowing.form</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <form string="Borrowing">
                <header>
                    <button name="action_confirm_borrow" 
                            string="Confirm Borrow" 
                            type="object" 
                            invisible="state != 'draft'" 
                            class="oe_highlight"/>
                    <button name="action_return_book" 
                            string="Return Book" 
                            type="object" 
                            invisible="state != 'borrowed'" 
                            class="oe_highlight"/>
                    <button name="action_mark_lost" 
                            string="Mark as Lost" 
                            type="object" 
                            invisible="state != 'borrowed'"
                            class="btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,borrowed,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="borrowing_info" string="Borrowing Information">
                            <field name="member_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   domain="[('active','=',True)]"/>
                            <field name="book_id" 
                                   options="{'no_create': True, 'no_open': True}"
                                   domain="[('state','=','available')]"/>
                        </group>
                        <group name="date_info" string="Dates">
                            <field name="borrow_date"/>
                            <field name="due_date"/>
                            <field name="return_date" readonly="1"/>
                        </group>
                    </group>
                    <group name="fine_info" string="Fine Information" invisible="days_overdue == 0">
                        <group>
                            <field name="days_overdue" readonly="1"/>
                            <field name="fine_amount" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                    <group name="notes_group" string="Notes">
                        <field name="notes" placeholder="Enter any additional notes..." nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_borrowing_search" model="ir.ui.view">
        <field name="name">library.borrowing.search</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <search string="Search Borrowings">
                <field name="name" string="Reference" filter_domain="[('name','ilike',self)]"/>
                <field name="member_id" string="Member"/>
                <field name="book_id" string="Book"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Borrowed" name="borrowed" domain="[('state','=','borrowed')]"/>
                <filter string="Returned" name="returned" domain="[('state','=','returned')]"/>
                <filter string="Lost" name="lost" domain="[('state','=','lost')]"/>
                <separator/>
                <filter string="Due Today" name="due_today" 
                        domain="[('due_date','=',context_today().strftime('%Y-%m-%d')),('state','=','borrowed')]"/>
                <filter string="Overdue" name="overdue" 
                        domain="[('due_date','&lt;',context_today().strftime('%Y-%m-%d')),('state','=','borrowed')]"/>
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('borrow_date','&gt;=',context_today().strftime('%Y-%m-01')),('borrow_date','&lt;=',(context_today()+relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Member" name="groupby_member" context="{'group_by':'member_id'}"/>
                    <filter string="Book" name="groupby_book" context="{'group_by':'book_id'}"/>
                    <filter string="Status" name="groupby_state" context="{'group_by':'state'}"/>
                    <filter string="Borrow Date" name="groupby_borrow_date" context="{'group_by':'borrow_date'}"/>
                    <filter string="Due Date" name="groupby_due_date" context="{'group_by':'due_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_library_borrowing_calendar" model="ir.ui.view">
        <field name="name">library.borrowing.calendar</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <calendar string="Borrowings Calendar" 
                      date_start="borrow_date" 
                      date_stop="due_date" 
                      color="state"
                      mode="month"
                      event_open_popup="1">
                <field name="member_id"/>
                <field name="book_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_library_borrowing_pivot" model="ir.ui.view">
        <field name="name">library.borrowing.pivot</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <pivot string="Borrowings Analysis">
                <field name="member_id" type="row"/>
                <field name="state" type="col"/>
                <field name="fine_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View -->
    <record id="view_library_borrowing_graph" model="ir.ui.view">
        <field name="name">library.borrowing.graph</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <graph string="Borrowings Statistics" type="bar">
                <field name="borrow_date" interval="month"/>
                <field name="state"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_borrowing" model="ir.actions.act_window">
        <field name="name">Borrowings</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">list,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_borrowed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first borrowing record
            </p>
            <p>
                Track book borrowings and manage returns efficiently.
            </p>
        </field>
    </record>
</odoo>