<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Member list view -->
    <record id="view_library_member_list" model="ir.ui.view">
        <field name="name">library.member.list</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <list string="Members">
                <field name="member_number"/>
                <field name="name"/>
                <field name="email"/>
                <field name="membership_type"/>
                <field name="borrowed_books_count"/>
                <field name="total_borrowings"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Member form view -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Member">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Member Name"/>
                        </h1>
                        <h2>
                            <field name="member_number" readonly="1"/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="membership_type"/>
                            <field name="join_date"/>
                        </group>
                        <group>
                            <field name="max_books" readonly="1"/>
                            <field name="borrowed_books_count" readonly="1"/>
                            <field name="total_borrowings" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <group>
                        <field name="address"/>
                    </group>

                    <notebook>
                        <page string="Borrowing History">
                            <field name="borrowing_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="book_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                    <field name="days_overdue"/>
                                    <field name="fine_amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Member search view -->
    <record id="view_library_member_search" model="ir.ui.view">
        <field name="name">library.member.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search string="Search Members">
                <field name="name"/>
                <field name="member_number"/>
                <field name="email"/>
                <field name="membership_type"/>

                <filter name="active"
                        string="Active"
                        domain="[('active','=',True)]"/>
                <filter name="inactive"
                        string="Inactive"
                        domain="[('active','=',False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_membership_type"
                            string="Membership Type"
                            context="{'group_by':'membership_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Member action -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first member
            </p>
        </field>
    </record>
</odoo>
