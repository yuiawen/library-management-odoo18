<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Books">
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="category"/>
                <field name="copies_available"/>
                <field name="total_copies"/>
                <field name="state" decoration-success="state=='available'" decoration-danger="state=='borrowed'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <header>
                    <button name="action_set_maintenance" string="Set Maintenance" type="object" invisible="state == 'maintenance'" class="btn-secondary"/>
                    <button name="action_set_available" string="Set Available" type="object" invisible="state != 'maintenance'" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,borrowed,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_library_borrowing)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-book"
                                context="{'default_book_id': id}">
                            <field name="active_borrowings"
                                widget="statinfo"
                                string="Borrowings"/>
                        </button>
                    </div>
                    <field name="cover_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Book Title" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="book_info">
                            <field name="author"/>
                            <field name="isbn"/>
                            <field name="publisher"/>
                            <field name="publication_date"/>
                        </group>
                        <group name="stock_info">
                            <field name="category"/>
                            <field name="pages"/>
                            <field name="total_copies"/>
                            <field name="copies_available"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Enter book description..."/>
                        </page>
                        <page string="Borrowing History" name="borrowing_history">
                            <field name="borrowing_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="member_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Search Books">
                <field name="name" string="Title" filter_domain="[('name','ilike',self)]"/>
                <field name="author" filter_domain="[('author','ilike',self)]"/>
                <field name="isbn" filter_domain="[('isbn','ilike',self)]"/>
                <field name="category"/>
                <separator/>
                <filter string="Available" name="available" domain="[('state','=','available')]"/>
                <filter string="All Borrowed" name="borrowed" domain="[('state','=','borrowed')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('state','=','maintenance')]"/>
                <separator/>
                <filter string="Fiction" name="fiction" domain="[('category','=','fiction')]"/>
                <filter string="Technology" name="technology" domain="[('category','=','technology')]"/>
                <filter string="Science" name="science" domain="[('category','=','science')]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="groupby_category" context="{'group_by':'category'}"/>
                    <filter string="Status" name="groupby_state" context="{'group_by':'state'}"/>
                    <filter string="Author" name="groupby_author" context="{'group_by':'author'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="author"/>
                <field name="cover_image"/>
                <field name="category"/>
                <field name="state"/>
                <field name="copies_available"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="'/web/image/library.book/' + record.id.raw_value + '/cover_image'" 
                                    alt="Book Cover" 
                                    class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    by <field name="author"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="label_selection" 
                                            options="{'classes': {'available': 'success', 'borrowed': 'danger', 'maintenance': 'warning'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first book
            </p>
            <p>
                Track your library's book collection with ease.
            </p>
        </field>
    </record>
</odoo>