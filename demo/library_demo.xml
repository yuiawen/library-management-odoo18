        <!-- Demo Books -->
        <record id="demo_book_1" model="library.book">
            <field name="name">Clean Code</field>
            <field name="author">Robert C. Martin</field>
            <field name="isbn">978-0132350884</field>
            <field name="publisher">Prentice Hall</field>
            <field name="publication_date">2008-08-01</field>
